{
  "compilerOptions": {
    "noEmit": false, // only run test using jest
    "target": "es2017",
    "lib": ["ES2017"],
    "module": "commonjs",
    "outDir": "dist",
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
